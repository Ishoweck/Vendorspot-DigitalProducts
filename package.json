{
  "name": "vendorspot-digital-products",
  "version": "1.0.0",
  "description": "Nigeria's most secure online marketplace for digital products",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "install:all": "pnpm install && pnpm run install:frontend && pnpm run install:backend",
    "install:frontend": "cd frontend && pnpm install",
    "install:backend": "cd backend && pnpm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev:backend": "cd backend && pnpm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && pnpm run build",
    "build:backend": "cd backend && pnpm run build",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && pnpm run lint",
    "lint:backend": "cd backend && pnpm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ecommerce",
    "digital-products",
    "marketplace",
    "nigeria",
    "vendorspot",
    "react",
    "nodejs",
    "typescript",
    "mongodb",
    "mongoose"
  ],
  "author": "Vendorspot Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vendorspot/digital-products.git"
  },
  "bugs": {
    "url": "https://github.com/vendorspot/digital-products/issues"
  },
  "homepage": "https://digital.vendorspot.com"
}
